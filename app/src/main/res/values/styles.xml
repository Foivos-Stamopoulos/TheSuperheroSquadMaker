<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Font Styles-->

    <style name="SmallFont">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SmallFont.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MediumFont">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MediumFont.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LargeFont">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LargeFont.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="XLargeFont">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="XLargeFont.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="XXLargeFont">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="XXLargeFont.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>